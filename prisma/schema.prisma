generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  password    String
  image       String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt()
  memberships Membership[]

  @@map("users")
}

model Membership {
  id           String    @id @default(uuid())
  user_id      String
  user         User      @relation(fields: [user_id], references: [id])
  workspace_id String
  tasks        Task[]
  createdAt    DateTime
  updatedAt    DateTime  @updatedAt()
  workspace    Workspace @relation(fields: [workspace_id], references: [id])
  projectId    String?

  @@map("memberships")
}

model Task {
  id           String       @id @default(uuid())
  name         String
  description  String?
  status       String
  workspace_id String
  workspace    Workspace    @relation(fields: [workspace_id], references: [id])
  members      Membership[]
  createdAt    DateTime
  updatedAt    DateTime     @updatedAt()

  @@map("tasks")
}

model Workspace {
  id        String       @id @default(uuid())
  name      String
  tasks     Task[]
  members   Membership[]
  createdAt DateTime
  updatedAt DateTime     @updatedAt()

  @@map("workspaces")
}
